{% extends 'layout.html.twig' %}
{% block title %}Nuevo coeficiente salarial - Sistema de Certificación de Salarios{% endblock %}
{% block prenomina %}
    <li class="active">
        <a href="{{ path('coeficiente_index') }}"> <i class="fa  fa-dollar"></i> Prenóminas</a>
        <ul class="nav">
            <li class="active"><a href="{{ path('coeficiente_new') }}"><i class="fa fa-plus"></i> Nuevo coeficiente salarial</a></li>
        </ul>
    </li>
{% endblock%}

 {% block content %}
     <div class="page-header">
         <h3 id="glyphicons">Nueva coeficiente salarial</h3>
     </div>
     <div class="panel panel-default">
         <div class="panel-heading">Datos de nuevo coeficiente</div>
         <div class="panel-body">
             <form class="form-horizontal" role="form" method="post" action="{{ path('coeficiente_new') }}">
                 <div class="form-group{% if form_errors(form)%} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Período:</label>
                     <div class="col-lg-5">
                         {{ form_widget(form.mes, { 'attr': {'class': 'form-control'} }) }}
                         <span class="help-block">Seleccione el mes</span>
                     </div>
                     <div class="col-lg-5">
                         {{ form_widget(form.ano, { 'attr': {'class': 'form-control'} }) }}
                         <span class="help-block">Seleccione el año</span>
                     </div>
                     {% if form_errors(form) %}
                         <span class="help-block text-danger">
                                        {{ form_errors(form) }}
                             </span>
                     {% endif %}
                 </div>
                 <div class="form-group{% if form_errors(form.cup)%} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Coeficiente CUP:</label>
                     <div class="col-lg-5">
                         {{ form_widget(form.cup, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(form.cup) %}
                             <span class="help-block text-danger">
                                 {{ form_errors(form.cup) }}
                             </span>
                         {% endif %}
                         <span class="help-block">Establezca el coeficiente en CUP para este período</span>
                     </div>
                 </div>
                     <div class="form-group{% if form_errors(form.cuc)%} has-error{% endif %}">
                         <label class="col-sm-2 control-label col-lg-2">Coeficiente CUC:</label>
                         <div class="col-lg-5">
                             {{ form_widget(form.cuc, { 'attr': {'class': 'form-control'} }) }}
                             {% if form_errors(form.cuc) %}
                                 <span class="help-block text-danger">
                                        {{ form_errors(form.cuc) }}
                             </span>
                             {% endif %}
                             <span class="help-block">Establezca el coeficiente en CUC para este período</span>
                         </div>
                     </div>

                     {{ form_row(form._token) }}

                     <div class="form-group">
                     <div class="col-lg-12 col-md-12">
                         <button type="submit" class="btn btn-success"><i class="fa fa-check-square"></i> Aceptar</button>
                     </div>
                 </div>
             </form>

         </div>
     </div>
 {% endblock %}
