{% extends 'layout.html.twig' %}
{% block title %}Nuevo usuario - Sistema de Certificación de Salarios{% endblock %}
{% block usuarios %}
    <li class="active">
        <a href="{{ path('usuarios_index') }}"><i class="fa fa-user"></i> Usuarios</a>
        <ul class="nav">
            <li class="active"><a href="{{ path('usuarios_new') }}"><i class="fa fa-plus"></i> Nuevo usuario</a></li>
        </ul>
    </li>
{% endblock%}

 {% block content %}
     <div class="page-header">
         <h3 id="glyphicons">Nuevo usuario</h3>
     </div>
     <div class="panel panel-default">
         <div class="panel-heading">Datos del usuario</div>
         <div class="panel-body">
             <form class="form-horizontal" role="form" method="post" action="{{ path('usuarios_new') }}">
                 <div class="form-group{% if form_errors(form.nombre) %} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Nombre:</label>
                     <div class="col-lg-10">
                         {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(form.nombre) %}
                             <span class="help-block text-danger">
                                        {{ form_errors(form.nombre) }}
                                    </span>
                         {% endif %}
                     </div>
                 </div>
                 <div class="form-group{% if form_errors(form.apellidos) %} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Apellidos:</label>
                     <div class="col-lg-10">
                         {{ form_widget(form.apellidos, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(form.apellidos) %}
                             <span class="help-block text-danger">
                                        {{ form_errors(form.nombre) }}
                                    </span>
                         {% endif %}
                     </div>
                 </div>
                 <div class="form-group{% if form_errors(form.usuario) %} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Nombre de usuario</label>
                     <div class="col-lg-10">
                         {{ form_widget(form.usuario, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(form.usuario) %}
                             <span class="help-block text-danger">
                                        {{ form_errors(form.usuario) }}
                                    </span>
                         {% endif %}
                     </div>
                 </div>
                 <div class="form-group{% if form_errors(form.correo) %} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Correo</label>
                     <div class="col-lg-10">
                         {{ form_widget(form.correo, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(form.correo) %}
                             <span class="help-block text-danger">
                                        {{ form_errors(form.correo) }}
                             </span>
                         {% endif %}
                     </div>
                 </div>
                 <div class="form-group{% if form_errors(form.password.first) %} has-error{% endif %}">
                         <label class="col-sm-2 control-label col-lg-2">Contraseña</label>
                         <div class="col-lg-10">
                             {{ form_widget(form.password.first, { 'attr': {'class': 'form-control'} }) }}
                         </div>
                         <br/>
                         <br/>
                         <label class="col-sm-2 control-label col-lg-2">Confirmar contraseña</label>
                     <div class="col-lg-10">
                         {{ form_widget(form.password.second, { 'attr': {'class': 'form-control'} }) }}
                     </div>
                     {% if form_errors(form.password.first) %}
                         <span class="help-block text-danger">
                             {{ form_errors(form.password.first) }}
                         </span>
                     {% endif %}
                 </div>
                 <div class="form-group{% if form_errors(form.rol) %} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Permisos</label>
                     <div class="col-lg-10">
                         {{ form_widget(form.rol, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(form.rol) %}
                             <span class="help-block text-danger">
                                        {{ form_errors(form.rol) }}
                             </span>
                         {% endif %}
                     </div>
                     {{ form_row(form._token) }}
                 </div>
                 <div class="form-group">
                     <div class="col-lg-12 col-md-12">
                         <button type="submit" class="btn btn-success"><i class="fa fa-check-square"></i> Aceptar</button>
                         <a href="{{ path('usuarios_index') }}" class="btn btn-danger"><i class="fa fa-ban"></i> Cancelar</a>
                     </div>
                 </div>
             </form>

         </div>
     </div>
 {% endblock %}
