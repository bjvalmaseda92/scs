{% extends 'layout.html.twig' %}
{% block title %}Editar departamento {{ departamento }} - Sistema de Certificaci√≥n de Salarios{% endblock %}
{% block departamento %}
    <li class="active">
        <a href="{{ path('departamento_index') }}"> <i class="fa  fa-building-o"></i> Departamentos</a>
        <ul class="nav">
            <li ><a href="{{ path('departamento_new') }}"><i class="fa fa-plus"></i> Nuevo departamento</a></li>
        </ul>
    </li>
{% endblock%}
 {% block content %}
     <div class="page-header">
         <h3 id="glyphicons">Editar departamento {{ departamento }}</h3>
     </div>
     <div class="panel panel-default">
         <div class="panel-heading">Datos del departamento {{ departamento }}</div>
         <div class="panel-body">
             <form class="form-horizontal" role="form" method="post" action="{{ path('departamento_edit', {'id': departamento.id}) }}">
                 <div class="form-group{% if form_errors(edit_form.nombre)%} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Nombre:</label>
                     <div class="col-lg-10">
                         {{ form_widget(edit_form.nombre, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(edit_form.nombre) %}
                             <span class="help-block text-danger">
                                 {{ form_errors(edit_form.nombre) }}
                             </span>
                         {% endif %}
                     </div>
                 </div>
                 <div class="form-group{% if form_errors(edit_form.taller) %} has-error{% endif %}">
                     <label class="col-sm-2 control-label col-lg-2">Taller:</label>
                     <div class="col-lg-10">
                         {{ form_widget(edit_form.taller, { 'attr': {'class': 'form-control'} }) }}
                         {% if form_errors(edit_form.taller) %}
                             <span class="help-block text-danger">
                                        {{ form_errors(edit_form.taller) }}
                                    </span>
                         {% endif %}
                     </div>
                     {{ form_row(edit_form._token) }}

                 </div>
                 <div class="form-group">
                     <div class="col-lg-12 col-md-12">
                         <button type="submit" class="btn btn-success"><i class="fa fa-check-square"></i> Aceptar</button>
                         <a href="{{ path('departamento_index') }}" class="btn btn-danger"><i class="fa fa-ban"></i> Cancelar</a>
                     </div>
                 </div>
             </form>

         </div>
     </div>
 {% endblock %}

